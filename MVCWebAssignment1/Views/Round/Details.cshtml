@model MVCWebAssignment1.Models.RoundViewModel

@{
    ViewBag.Title = "Round " + Model.Round.RoundNumber;
}

<h2>Round @Model.Round.RoundNumber</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Lanes[0].LaneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lanes[0].Swimmer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lanes[0].FinishTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lanes[0].LaneComment)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Lanes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LaneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Swimmer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaneComment)
            </td>
            <td>
                <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit","Lane", new { id = item.Id })';return false;">Record Time</button>
                <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete","Lane",new { id = item.Id })';return false;">Delete Lane</button>
            </td>
        </tr>
    }
</table>
<hr />
<button class="btn btn-primary glyphicon glyphicon-circle-arrow-left" data-toggle="tooltip" title="Back to Event" onclick="location.href='@Url.Action("Details", "Event", new { id = Model.Round.EventId })';return false;"></button>
<button class="btn btn-success glyphicon glyphicon-plus" data-toggle="tooltip" title="Add new Event" onclick="location.href='@Url.Action("Create", "Lane", new {RoundId = Model.Round.Id })';return false;"></button>
