@model MVCWebAssignment1.Models.FamilyGroupViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.FamilyGroup.GroupName</h2>

<div>
    <h4>Group Members</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FamilyGroupMembers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyGroupMembers[0].Email)
            </th>
        </tr>

        @foreach (var item in Model.FamilyGroupMembers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </table>
    <p>
        <button class="btn btn-primary glyphicon glyphicon-circle-arrow-left" data-toggle="tooltip" title="Back to Family Groups" onclick="location.href='@Url.Action("Index")';return false;"></button>
    </p>
