@model MVCWebAssignment1.Models.Round

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Round</h4>
    <hr />
    <dl class="dl-horizontal">
        <h3>Deleting this round will delete all attributed lanes and reorder existing rounds.</h3>
