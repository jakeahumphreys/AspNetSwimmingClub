@model MVCWebAssignment1.Models.EventViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Event.AgeRange)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.AgeRange)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.Gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.Distance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.Distance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Event.SwimmingStroke)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.SwimmingStroke)
        </dd>

    </dl>
</div>
<div>
    <h4>Rounds</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rounds[0].RoundNumber)
            </th>
            <th>
                @Html.DisplayName("Number of lanes")
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>
        </tr>
        @foreach (var item in Model.Rounds)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoundNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lanes.Count)
                </td>
                <td>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Round",new { id = item.Id })';return false;">Round Details</button>
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete","Round",new { id = item.Id })';return false;">Delete</button>
                </td>
            </tr>
        }
    </table>
    <hr/>
    <button class="btn btn-primary glyphicon glyphicon-circle-arrow-left" data-toggle="tooltip" title="Back to Meet" onclick="location.href='@Url.Action("Details", "Meet", new {id = Model.Event.MeetId})';return false;"></button>
    <button class="btn btn-primary glyphicon glyphicon-cog" data-toggle="tooltip" title="Edit Event" onclick="location.href='@Url.Action("Edit","Event", new {id = Model.Event.Id })';return false;"></button>
    <button class="btn btn-success glyphicon glyphicon-plus" data-toggle="tooltip" title="Add new Event" onclick="location.href='@Url.Action("Create", "Round", new {EventId = Model.Event.Id })';return false;"></button>
</div>